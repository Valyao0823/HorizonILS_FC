<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homerelative"
    android:background="@color/backgroundcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="350dp"
        android:layout_marginBottom="80dp">
            <TextView
                android:id="@+id/CODE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="gone" />

            <GridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CODE1"
                android:layout_marginTop="80dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"/>

            <TextView
                android:id="@+id/CODE2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gridView"
                android:layout_toEndOf="@+id/CODE1"
                android:layout_toRightOf="@+id/CODE1"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/CODE3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gridView"
                android:layout_toEndOf="@+id/CODE2"
                android:layout_toRightOf="@+id/CODE2"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/CODE4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gridView"
                android:layout_toEndOf="@+id/CODE3"
                android:layout_toRightOf="@+id/CODE3"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/gridView">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton1"
                    android:background="@drawable/circledots"
                    android:layout_weight="0.25"
                    android:enabled="false"
                    android:gravity="center" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:background="@drawable/circledots"
                    android:layout_weight="0.25"
                    android:enabled="false"
                    android:gravity="center"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton3"
                    android:background="@drawable/circledots"
                    android:layout_weight="0.25"
                    android:enabled="false"
                    android:gravity="center"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton4"
                    android:background="@drawable/circledots"
                    android:layout_weight="0.25"
                    android:enabled="false"
                    android:gravity="center"
                    />

            </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/switch1"
        android:id="@+id/emergencypic"
        android:background="@drawable/emergency"
        android:visibility="gone"/>
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency OFF  "
        android:textSize="30dp"
        android:thumb="@drawable/repswitch"
        android:track="@drawable/repbg"
        android:id="@+id/switch1"
        android:layout_marginLeft="5dp"
        android:checked="false"
        android:switchMinWidth="30dp"
        android:textColor="@color/white"
        android:textOn=""
        android:textOff=""
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp"/>

</RelativeLayout>
