<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="0dp"
    tools:context=".ZoneList"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal|top"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="103dp"
                android:layout_height="44dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="User Info"
                android:id="@+id/textView8"
                android:layout_row="0"
                android:layout_column="36"
                android:layout_gravity="left"
                android:layout_columnSpan="15"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="61dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Sector"
                android:id="@+id/textView11"
                android:layout_row="0"
                android:layout_column="59"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"
                android:singleLine="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:id="@+id/button3"
                android:layout_row="0"
                android:layout_column="60" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogOut"
                android:id="@+id/button2"
                android:layout_row="0"
                android:layout_column="61" />

        </GridLayout>
    </FrameLayout>

    <!--<Button-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="New Button"-->
    <!--android:id="@+id/button"-->
    <!--android:layout_alignRight="@+id/frameLayout"-->
    <!--android:layout_alignEnd="@+id/frameLayout"-->
    <!--android:layout_above="@+id/frameLayout"-->
    <!--android:paddingBottom="8dp"-->
    <!--android:layout_alignParentTop="true" />-->

    <ListView
        android:layout_width="1254dp"
        android:layout_height="737dp"
        android:id="@+id/sector_list"
        android:divider="@null"
        android:longClickable="true"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_marginTop="73dp" />

</RelativeLayout>