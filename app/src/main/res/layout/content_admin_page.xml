<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/userlistlayout"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/userlist"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:divider="@android:color/transparent"
            android:scrollbars="none"
            android:dividerHeight="5dp"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/adduser"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add User"
            android:id="@+id/adduser"
            android:background="@drawable/buttonclick"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/userlistlayout"
        android:layout_toEndOf="@+id/userlistlayout"
        android:id="@+id/sectorlistlayout"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">
        <ListView
            android:id="@+id/sectorlist"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            android:layout_width="200dp"
            android:dividerHeight="5dp"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/addsector"
            android:minHeight="?android:attr/listPreferredItemHeight"
        />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add sector"
            android:background="@drawable/buttonclick"
            android:id="@+id/addsector"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/devicelistlayout"
        android:layout_alignTop="@+id/sectorlistlayout"
        android:layout_toEndOf="@+id/sectorlistlayout"
        android:layout_marginLeft="30dp">
        <ListView
            android:id="@+id/devicelist"
            android:layout_width="200dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:dividerHeight="5dp"
            android:layout_above="@+id/adddevice"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/listPreferredItemHeight" />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add device"
            android:id="@+id/adddevice"
            android:background="@drawable/buttonclick"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/devicelistlayout"
        android:background="@drawable/backrec"
        android:id="@+id/infor"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="20dp"
            android:id="@+id/inforsum"
            android:text="Summary Information"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/inforsumuser"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/inforsum"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/inforsumsector"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/inforsumuser"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/inforsumdevice"
            android:layout_below="@+id/inforsumsector"
            />
    </RelativeLayout>


</RelativeLayout>
